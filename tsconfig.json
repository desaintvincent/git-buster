{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["ES2019", "DOM"],
    "skipLibCheck": true,
    
    "resolveJsonModule": true,
    "isolatedModules": true,

    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment"
  },
  "include": ["src"],
  "exclude": [
    "tests",
    "build", 
    "node_modules"
  ]
}
