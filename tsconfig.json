{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "target": "ES6",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    // "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["src"],
  "exclude": [
    "tests",
    "build",
    "node_modules"
  ]
}
